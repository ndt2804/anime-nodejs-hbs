<section class="bg-white mx-auto p-20">
  <div
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0"
  >

    <div
      class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700"
    >
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1
          class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white"
        >
          Add Anime
        </h1>
        <form
          class="space-y-4 md:space-y-6"
          method="POST"
          action="/anime/store"
        >
          <div>
            <label
              for="name"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="Vol ?"
              required=""
            />
          </div>
          <div>
            <label
              for="description"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >description</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="video id"
              required=""
            />
          </div>
          <div>
            <label
              for="image"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >image</label>
            <input
              type="text"
              class="form-control"
              id="image"
              name="image"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="video id"
              required=""
            />
          </div>
          <div>
            <label
              for="videoID"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >trailerVideoID</label>
            <input
              type="text"
              class="form-control"
              id="videoID"
              name="videoID"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="video id"
              required=""
            />
          </div>

          <label for="genres">Genres</label><br />
          <input type="checkbox" id="action" name="genres" value="action" />
          <label for="action">Action</label><br />
          <input type="checkbox" id="drama" name="genres" value="drama" />
          <label for="drama">Drama</label><br />

          <input type="checkbox" id="comedy" name="genres" value="Drama" />
          <label for="comedy">Comedy</label><br />

          <input
            type="checkbox"
            id="adventure"
            name="genres"
            value="adventure"
          />
          <label for="adventure">Adventure</label><br />

          <input type="checkbox" id="fantasy" name="genres" value="fantasy" />
          <label for="fantasy">Fantasy</label><br />

          <input type="checkbox" id="harem" name="genres" value="harem" />
          <label for="harem">Harem</label><br />

          <input type="checkbox" id="romance" name="genres" value="romance" />
          <label for="romance">Romance</label><br />

          <input type="checkbox" id="school" name="genres" value="school" />
          <label for="school">School</label><br />

          <input type="checkbox" id="yuri" name="genres" value="yuri" />
          <label for="yuri">Yuri</label><br />

          <button
            type="submit"
            class="w-full bg-cyan-400 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          >Up Load</button>

        </form>
      </div>{{#if error}}
        <div class="login-error">{{error}}</div>
      {{/if}}
    </div>
  </div>
</section>